<div class="nav fixed">
  <h3>Wikinimous</h3>
  <%= link_to "Write an article", new_article_path %>
</div>


<ul>
  <% @articles.each do |article| %>
    <li class="center">
      <h2><%= link_to article.title, article_path(article)%></h2>
      <p><%= article.content %></p>
      <%= link_to article_path(article),
            method: :delete,
            data: { confirm: "Are you sure?" },
            class: "a-center a-resize" do %>
          <%= fa_icon "trash"%>
      <% end %>
    </li>
  <% end %>
</ul>

